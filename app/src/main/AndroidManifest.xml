                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".signInOrUp.ActivityUserInfo"
            android:exported="false"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".signInOrUp.ActivitySignUpOrIn"
            android:exported="false"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
