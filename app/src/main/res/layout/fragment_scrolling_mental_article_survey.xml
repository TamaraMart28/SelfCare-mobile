<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light_green"
    tools:context=".mentalArticle.ScrollingFragmentMentalArticleSurvey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            style="@style/Theme.Prototype.Normal"
            android:textColor="@color/dark_brown"
            android:text="Какие темы Вас больше всего интересуют в контексте ментального здоровья?"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_themes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="5dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_themes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginStart="5dp"
                        style="@style/Theme.Prototype.Normal"
                        android:layout_gravity="center"/>

                    <ImageButton
                        android:id="@+id/but_add_themes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_add_circle_24"
                        android:backgroundTint="@color/light_green"
                        android:layout_gravity="center"
                        android:padding="20dp"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/fl_themes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            style="@style/Theme.Prototype.Normal"
            android:textColor="@color/dark_brown"
            android:text="Предпочитаете ли Вы материалы, основанные на научных исследованиях, или материалы, основанные на личном опыте и историях успеха?"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="5dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginStart="5dp"
                        style="@style/Theme.Prototype.Normal"
                        android:layout_gravity="center"/>

                    <ImageButton
                        android:id="@+id/but_add_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_add_circle_24"
                        android:backgroundTint="@color/light_green"
                        android:layout_gravity="center"
                        android:padding="20dp"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/fl_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            style="@style/Theme.Prototype.Normal"
            android:textColor="@color/dark_brown"
            android:text="Какой размер материалов Вы предпочитаете?"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="5dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_duration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginStart="5dp"
                        style="@style/Theme.Prototype.Normal"
                        android:layout_gravity="center"/>

                    <ImageButton
                        android:id="@+id/but_add_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_add_circle_24"
                        android:backgroundTint="@color/light_green"
                        android:layout_gravity="center"
                        android:padding="20dp"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/fl_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            style="@style/Theme.Prototype.Normal"
            android:textColor="@color/dark_brown"
            android:text="Выберите предпочитаемые категории ментальных материалов:"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_m_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="5dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_m_category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginStart="5dp"
                        style="@style/Theme.Prototype.Normal"
                        android:layout_gravity="center"/>

                    <ImageButton
                        android:id="@+id/but_add_m_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_add_circle_24"
                        android:backgroundTint="@color/light_green"
                        android:layout_gravity="center"
                        android:padding="20dp"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/fl_m_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button_pick_ma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            style="@style/Theme.Prototype.BoldItalic"
            android:backgroundTint="@color/green"
            android:textColor="@color/very_light_green"
            android:text="Подобрать" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>