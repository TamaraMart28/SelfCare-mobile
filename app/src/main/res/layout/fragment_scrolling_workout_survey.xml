<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light_green"
    tools:context=".workout.ScrollingFragmentWorkoutSurvey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            style="@style/Theme.Prototype.Normal"
            android:textColor="@color/dark_brown"
            android:text="На что должна быть направлена тренировка?"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_focus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="5dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_focus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginStart="5dp"
                        style="@style/Theme.Prototype.Normal"
                        android:layout_gravity="center"/>

                    <ImageButton
                        android:id="@+id/but_add_focus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_add_circle_24"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/light_green"
                        android:padding="20dp"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/fl_focus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            style="@style/Theme.Prototype.Normal"
            android:textColor="@color/dark_brown"
            android:text="Выберите тип тренировки:"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="5dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginStart="5dp"
                        style="@style/Theme.Prototype.Normal"
                        android:layout_gravity="center"/>

                    <ImageButton
                        android:id="@+id/but_add_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_add_circle_24"
                        android:layout_gravity="center"
                        android:padding="20dp"
                        android:backgroundTint="@color/light_green"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/fl_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            style="@style/Theme.Prototype.Normal"
            android:textColor="@color/dark_brown"
            android:text="Какое оборудование Вы хотели бы использовать во время тренировки?"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_equipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="5dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_equipment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginStart="5dp"
                        style="@style/Theme.Prototype.Normal"
                        android:layout_gravity="center"/>

                    <ImageButton
                        android:id="@+id/but_add_equipment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_add_circle_24"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/light_green"
                        android:padding="20dp"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/fl_equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            style="@style/Theme.Prototype.Normal"
            android:textColor="@color/dark_brown"
            android:text="Какие цели Вы преследуете касаемо тренировок?"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="5dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_target"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginStart="5dp"
                        style="@style/Theme.Prototype.Normal"
                        android:layout_gravity="center"/>

                    <ImageButton
                        android:id="@+id/but_add_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_add_circle_24"
                        android:layout_gravity="center"
                        android:padding="20dp"
                        android:backgroundTint="@color/light_green"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/fl_target"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            style="@style/Theme.Prototype.Normal"
            android:textColor="@color/dark_brown"
            android:text="Сколько времени вы обычно готовы уделять одной тренировке?"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <EditText
                    android:id="@+id/edit_text_duration_from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Время от"
                    style="@style/Theme.Prototype.Normal"
                    android:textColor="@color/dark_brown"
                    android:backgroundTint="@color/brown"
                    android:textColorHint="@color/light_brown"
                    android:layout_marginEnd="50dp"
                    android:focusable="false"/>

                <EditText
                    android:id="@+id/edit_text_duration_to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Время до"
                    android:textColor="@color/dark_brown"
                    android:backgroundTint="@color/brown"
                    android:textColorHint="@color/light_brown"
                    style="@style/Theme.Prototype.Normal"
                    android:focusable="false"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            style="@style/Theme.Prototype.Normal"
            android:textColor="@color/dark_brown"
            android:text="Из скольких упражнений Вы хотели бы выполнять тренировку?"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_amount_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <EditText
                    android:id="@+id/edit_text_amount_training_from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Количество от"
                    android:textColor="@color/dark_brown"
                    android:backgroundTint="@color/brown"
                    android:textColorHint="@color/light_brown"
                    style="@style/Theme.Prototype.Normal"
                    android:layout_marginEnd="50dp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/edit_text_amount_training_to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Количество до"
                    android:textColor="@color/dark_brown"
                    android:backgroundTint="@color/brown"
                    android:textColorHint="@color/light_brown"
                    style="@style/Theme.Prototype.Normal"
                    android:inputType="number"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button_pick_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            style="@style/Theme.Prototype.BoldItalic"
            android:backgroundTint="@color/green"
            android:textColor="@color/very_light_green"
            android:text="Подобрать" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>